# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_DEBUG=true

# Frontend Configuration
# IMPORTANT: Choose ONE approach for API base URL configuration
# Option 1: Use relative path (recommended for production with nginx proxy)
VITE_API_BASE_URL=/api

# Option 2: Use absolute URL (for development or direct backend access)
# VITE_API_BASE_URL=http://localhost:18000

VITE_APP_TITLE=Web Scraper

# Scraping Configuration
MAX_SCRAPING_TIMEOUT=30
MAX_IMAGE_SIZE=10485760  # 10MB
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,svg,webp

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:180,http://localhost:5173,https://*.ngrok-free.app,https://*.ngrok.io
SECRET_KEY=your-secret-key-here

# Logging
LOG_LEVEL=INFO
LOG_FILE=scraping.log

# Docker Configuration
# Development: Use localhost URLs
# Production: Use relative paths or container names
VITE_API_BASE_URL_DEV=http://localhost:18000
VITE_API_BASE_URL_PROD=/api

# Ngrok Configuration (for public access)
NGROK_AUTHTOKEN=your_ngrok_auth_token_here

# Cloudflare Tunnel Configuration (for public access)
CLOUDFLARE_TUNNEL_TOKEN=your_cloudflare_tunnel_token_here 